<html>
  <head>
    {{ content_for_header }}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&family=Oswald:wght@200..700&family=Vollkorn:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    >
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">

    {{ 'theme.css' | asset_url | stylesheet_tag }}

    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v6.4.0/css/all.css"
      crossorigin="anonymous"
    >
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    >
  </head>

  <body id="body">
    <script src="{{ 'header.js' | asset_url }}" async></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>

    <div class="main-overlay disable-overlay"></div>
    {% section 'promotional-banner' %}
    {% section 'header' %}
    {% render 'cart-drawer' %}
    {% render 'wishlist-drawer' %}
    {% render 'search-drawer' %}

    <main id="main" role="main">
      {% comment %}
        {% section 'feature-banner' %}
        {% section 'slogan' %}
        {% section 'featured-products' %}
      {% endcomment %}
      {{ content_for_layout }}
    </main>
    <script src="{{ 'cart-drawer.js' | asset_url }}" defer></script>
    <script src="{{ 'wishlist-drawer.js' | asset_url }}" defer></script>
    <script src="{{ 'search-drawer.js' | asset_url }}" defer></script>
    <script src="{{ 'add-to-cart-modal.js' | asset_url }}" defer></script>
    <script src="{{ 'utils.js' | asset_url }}" defer></script>
    <script src="{{ "featured-products.js" | asset_url }}" defer></script>
    <script src="{{ 'promotional-banner.js' | asset_url }}" defer></script>
  </body>
</html>
