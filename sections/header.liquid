<section class="header-wrapper">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="menu-wrapper">
          <div class="menu-left-wrapper">
            {% if section.settings.logo == '' %}
              <img
                src="{{ section.settings.logo | image_url: width: 180 }}"
                alt="Logo"
                loading="lazy"
                width="180"
                height="40"
              >
            {% else %}
              <img
                src="{{ 'fallback-logo.png' | asset_url }}"
                alt="Logo"
                loading="lazy"
                width="180"
                height="40"
              >
            {% endif %}
          </div>
          <div class="menu-right-wrapper">
            <ul class="navigation-wrappper">
              <li class="navigation-list sub-navigation-wrapper">
                <a href="#">SHOP</a>
                <i class="fa-solid fa-angle-down down-icon"></i>

                <ul class="sub-menu-wrapper">
                  <li class="sub-menu-list">
                    <a href="#"> Momo Sauce</a>
                  </li>
                  <li class="sub-menu-list"><a href="#"> Frozen Food</a></li>
                  <li class="sub-menu-list"><a href="#"> Bundles</a></li>
                  <li class="sub-menu-list"><a href="#"> Gift Cards</a></li>
                </ul>
              </li>
              <li class="navigation-list"><a href="#"> OUR STORY</a></li>
              <li class="navigation-list"><a href="#"> CONTACT US</a></li>
            </ul>
            <div class="menu-icon-wrapper">
              <!-- Account -->
              <a href="{{ routes.account_login_url }}">
                <i class="fa-solid fa-user"></i>
              </a>
              <!-- Search -->
              <i class="fa-solid fa-search"></i>
              <!-- wishlist -->
              <i class="fa-solid fa-heart" id="wishlist-icon" aria-label="Open Wishlist"></i>
              <!-- Cart -->
              <i class="fa-solid fa-cart-shopping add-to-cart-icon" id="cart-icon" aria-label="Open Cart">
                {% if cart.item_count > 0 %}
                  <span class="cart-count-number" id="cart-item-count">{{ cart.item_count }}</span>
                {% endif %}
              </i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Navigation"
    },
    {
      "type": "link_list",
      "id": "sub_menu",
      "label": "Sub Navigation"
    }
  ]
}
{% endschema %}
