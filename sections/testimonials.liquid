<section class="testimonials">
  <div class="container">
    <h2>Customer Testimonials</h2>
    <div class="testimonials-list">
      {% assign testimonials = section.settings.testimonials_text | split: '---' %}
      {% for testimonial in testimonials %}
        <div class="testimonial">
          <p class="testimonial-text">"{{ testimonial | strip }}"</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Customer Testimonials",
  "settings": [
    {
      "type": "textarea",
      "id": "testimonials_text",
      "label": "Testimonials (separate each testimonial with ---)",
      "default": "The prepared meals are delicious and such a timesaver for those with a lot on their plate, but still looking to eat well. — Tasha\n---\nThe food is always fresh and tasty. — Alex\n---\nGreat service and healthy options! — Jamie"
    }
  ],
  "presets": [
    {
      "name": "Customer Testimonials",
      "category": "Text"
    }
  ]
}
{% endschema %} 