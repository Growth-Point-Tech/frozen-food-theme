{% if section.settings['show-promotional-banner'] %}
  <div class="promotional-banner-wrapper swiper" id="promotional-banner">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide promotional-primary-text">
          {{ block.settings.text }}
        </div>
      {% endfor %}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
{% endif %}

<style>
  .promotional-banner-wrapper {
    background-color: {{ section.settings.background-color }};
    color: {{ section.settings.text-color }};
    text-align: {{ section.settings.text-position }};
  }
</style>

{% schema %}
{
  "name": "Promotional Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show-promotional-banner",
      "label": "Show Promotional Banner",
      "default": true
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background Color",
      "default": "#1B1F23"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "select",
      "id": "text-position",
      "label": "Text Position",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "text_slide",
      "name": "Text Slide",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Promotional Text"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Promotional Banner Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
