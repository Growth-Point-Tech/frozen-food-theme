{% if section.settings['show-promotional-banner'] %}
  <div class="promotional-banner-wrapper" id="promotional-banner">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="swiper" id="promotional-banner-swiper">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide promotional-primary-text">
                  {{ block.settings.text }}
                </div>
              {% endfor %}
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Promotional Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show-promotional-banner",
      "label": "Show Promotional Banner",
      "default": true
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background Color",
      "default": "rgb(48, 51, 54)"
    },
    {
      "type": "color",
      "id": "text-color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "select",
      "id": "text-position",
      "label": "Text Position",
      "options": [
        {
          "label": "Left",
          "value": "left"
        },
        {
          "label": "Center",
          "value": "center"
        },
        {
          "label": "Right",
          "value": "right"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "text_slide",
      "name": "Text Slide",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Promotional Text"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Promotional Banner Slider",
      "category": "Custom"
    }
  ]
}
{% endschema %}
