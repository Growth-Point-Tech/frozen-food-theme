{% assign banner_height = section.settings['banner-height'] | default: 'large' %}

<section
  id="banner-{{ section.id }}"
  class="banner-section banner-{{ banner_height }} section-wrapper"
  data-animation="{{ section.settings['banner-parallax'] }}"
>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="banner-wrapper">
          {% if section.settings['banner-overlay'] %}
            <div class="banner-overlay"></div>
          {% endif %}
          <img
            src="{{ section.settings['banner-image'] | image_url }}"
            width="100%"
            height="100%"
            class="banner-image"
            id="parallax-image-animation"
          >
          <div class="feature-banner-information-wrapper" id="parallax-content-animation">
            {% if section.settings['feature-banner-title'] != '' %}
              <h1 class="banner-title">
                {{ section.settings['feature-banner-title'] }}
              </h1>
            {% endif %}

            {% if section.settings['feature-banner-subtitle'] != '' %}
              <p class="banner-subtitle">
                {{ section.settings['feature-banner-subtitle'] }}
              </p>
            {% endif %}

            {% if section.settings['button-text'] != '' %}
              <a
                href="{{ section.settings['button-link'] | default: '#' }}"
                class="btn btn-outline"
              >
                <span>
                  {{ section.settings['button-text'] | default: 'Shop Now' }}
                </span>

                {% comment %}
                  <img
                    src="{{ 'right-arrow.png' | asset_url }}"
                    class="btn-icon"
                    width="22"
                    height="22"
                    alt="right-arrow"
                  >
                {% endcomment %}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .banner-overlay {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{section.settings[ 'overlay-opacity'] | default: 0.9}});
    z-index: 1;
  }
</style>

{% schema %}
{
  "name": "Feature Banner",
  "settings": [
    {
      "type": "header",
      "content": "Banner Height"
    },
    {
      "type": "select",
      "id": "banner-height",
      "label": "Banner Height",
      "options": [
        {
          "value": "small",
          "label": "Small (300px)"
        },
        {
          "value": "medium",
          "label": "Medium (500px)"
        },
        {
          "value": "large",
          "label": "Large (735px)"
        }
      ],
      "default": "large"
    },

    {
      "type": "header",
      "content": "Banner Animation"
    },

    {
      "type": "checkbox",
      "id": "banner-parallax",
      "label": "Enable Banner parallax",
      "default": true
    },

    {
      "type": "header",
      "content": "Banner Content"
    },

    {
      "type": "image_picker",
      "id": "banner-image",
      "label": "Banner Image"
    },

    {
      "type": "textarea",
      "id": "feature-banner-title",
      "label": "Banner Title"
    },
    {
      "type": "textarea",
      "id": "feature-banner-subtitle",
      "label": "Banner Subtitle"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button-link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Row Content alignment"
    },

    {
      "type": "header",
      "content": "Banner Image Overlay"
    },
    {
      "type": "checkbox",
      "id": "banner-overlay",
      "label": "Banner Overlay",
      "default": true
    },

    {
      "type": "range",
      "id": "overlay-opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "default": 1,
      "label": "Overlay Opacity"
    }
  ],
  "presets": [
    {
      "name": "Banner"
    }
  ]
}
{% endschema %}
