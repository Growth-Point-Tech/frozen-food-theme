<section class="featured-product-wrapper">
  <div class="container">
    {% assign product_count = section.settings.collection.products.size %}
    <div class="row product-slider-wrapper" data-product-count="{{ product_count }}">
      {% if section.settings.collection and section.settings.collection.products.size > 0 %}
        {% for product in section.settings.collection.products limit: section.settings.limit %}
          <div class="col-3 product-slide">
            {% render 'product-card', product: product %}
          </div>
        {% endfor %}
      {% else %}
        <p>No Product found</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Select a collection"
    },
    {
      "type": "range",
      "id": "limit",
      "label": "Number of products to show",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Featured products"
    }
  ]
}
{% endschema %}
