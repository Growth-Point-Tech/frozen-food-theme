<div class="product-details-section">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="product-bread-crumb-wrapper">
          {% render 'bread-crumbs', title: product.title %}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="product-details-wrapper">
          <div class="product-image-wrapper">
            {% render 'product-image-gallery' %}
          </div>
          <div class="product-content-wrapper">
            <div class="product-sku">{{ product.type }}</div>
            <h1 class="product-title">{{ product.title }}</h1>

            <div class="product-price">{{ product.price | money }}</div>

            {% if product.options_with_values.size != '' %}
              <div class="divier"></div>
              <div class="product-variation-wrapper">
                {% for option in product.options_with_values %}
                  <div class="product-variation-content">
                    <div class="variation-title">{{ option.name }}</div>
                    <div class="variations-list-wrapper">
                      {% for value in option.values %}
                        <div class="variations-list">
                          <span>{{ value }}</span>
                          {% comment %} <span class="variation-price">{{ value.price | money }}</span> {% endcomment %}
                        </div>
                      {% endfor %}
                    </div>
                  </div>
                {% endfor %}
              </div>
              <div class="divier"></div>
            {% endif %}

            <div class="product-description-wrapper">
              <span class="product-desc-value">
                {{ product.description | truncate: 200, '... <span class="turncate-des-text">READ MORE</span>' -}}
              </span>
            </div>

            <div class="product-stock">
              <span>Stock Status</span>
              <span class="stock-value">In Stock </span>
            </div>

            <div class="product-details-cta-wrapper">
              {% render 'product-quantity', product: product, appliedQty: 1 %}
              <div class="product-details-btn-group">
                <button
                  class="add-to-cart btn product-add-to-cart-btn"
                  data-variant-id="{{ product.variants.first.id }}"
                >
                  Add to cart

                  <img
                    src="{{ 'button-cart-icon.png' | asset_url }}"
                    class="btn-icon"
                    width="20"
                    height="20"
                    alt="right-arrow"
                  >
                </button>
              </div>
            </div>

            <div class="shipping-information-wrapper">
              <span class="shipping-info-title">Shipping Information</span>
              <span class="shipping-info-value"
                >We ship orders Mondays and Tuesdays. This shipping setup ensures your orders remain safe and frozen
                while traveling with blocks of dry-ice!
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="product-full-description-wrapper">
          <div class="product-full-desc-title">Product Information</div>
          <div class="product-full-desc-value">{{ product.description }}</div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Details",
  "settings": [],
  "presets": [
    {
      "name": "Product Details"
    }
  ]
}
{% endschema %}
