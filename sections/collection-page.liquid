<div class="collection-page-section">
  <div class="container">
    <div class="row">
      <div class="col">
        {% comment %} ?filter.p.filter.p.product_type=bundles&filter.p.filter.p.product_type=frozen+food {% endcomment %}
        {% if section.blocks.size == 0 %}
          <div class="no-collection-found-wrapper">No Collection Found</div>
        {% else %}
          <div class="collection-wrapper">
            {% for block in section.blocks %}
              <a
                href="/pages/all-products?filter.p.product_type={{ block.settings.collection_title | downcase | replace: ' ', '+' }}"
                class="collection-item"
              >
                <div class="collection-image-wrapper">
                  <img
                    src="{{ block.settings.collection_image | image_url}}"
                    width="100"
                    height="100"
                    alt="Collection Image"
                    class="collection-image"
                  >
                </div>
                <div class="collection-title">
                  {{ block.settings.collection_title }}
                </div>
              </a>
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collections List",
  "settings": [],
  "blocks": [
    {
      "type": "text_slide",
      "name": "Collections",
      "settings": [
        {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "collection_title",
          "label": "Title"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Collections",
      "blocks": []
    }
  ]
}
{% endschema %}
