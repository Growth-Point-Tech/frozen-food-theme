      "default": "Lorem Ipsum"
    },
    {
      "type": "textarea",
      "id": "slogan-2-description",
      "label": "Slogan 2 Description",
      "default": "It is a long established fact that a reader will be distracted by the"
    },
    {
      "type": "image_picker",
      "id": "slogan-3-image",
      "label": "Slogan 3 Image"
    },
    {
      "type": "text",
      "id": "slogan-3-title",
      "label": "Slogan 3 Title",
