<section class="slogan-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-4">
        <div class="slogan-content-wrapper">
          {% if section.settings['slogan-1-image'] %}
            <img
              src="{{ section.settings['slogan-1-image'] | image_url: width: 400 }}"
              alt="{{ section.settings['slogan-1-title'] }}"
              width="400"
              height="400"
              class="slogan-image"
            >
          {% else %}
            <img
              src="https://placehold.co/400x400"
              alt="{{ section.settings['slogan-1-title'] }}"
              width="400"
              height="400"
              class="slogan-image"
            >
          {% endif %}

          <div class="slogan-content">
            {% if section.settings['slogan-1-title'] != '' %}
              <h3 class="slogan-title">{{ section.settings['slogan-1-title'] }}</h3>
            {% endif %}
            <div class="slogan-divider"></div>

            {% if section.settings['slogan-1-description'] != '' %}
              <p class="slogan-information">
                {{ section.settings['slogan-1-description'] }}
              </p>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="slogan-content-wrapper">
          {% if section.settings['slogan-2-image'] %}
            <img
              src="{{ section.settings['slogan-2-image'] | image_url: width: 400 }}"
              alt="{{ section.settings['slogan-2-title'] }}"
              width="400"
              height="400"
              class="slogan-image"
            >
          {% else %}
            <img
              src="https://placehold.co/400x400"
              alt="{{ section.settings['slogan-2-title'] }}"
              width="400"
              height="400"
              class="slogan-image"
            >
          {% endif %}

          <div class="slogan-content">
            {% if section.settings['slogan-2-title'] != '' %}
              <h3 class="slogan-title">{{ section.settings['slogan-2-title'] }}</h3>
            {% endif %}
            <div class="slogan-divider"></div>

            {% if section.settings['slogan-2-description'] != '' %}
              <p class="slogan-information">
                {{ section.settings['slogan-2-description'] }}
              </p>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col-4">
        <div class="slogan-content-wrapper">
          {% if section.settings['slogan-3-image'] %}
            <img
              src="{{ section.settings['slogan-3-image'] | image_url: width: 400 }}"
              alt="{{ section.settings['slogan-3-title'] }}"
              width="400"
              height="400"
              class="slogan-image"
            >
          {% else %}
            <img
              src="https://placehold.co/400x400"
              alt="{{ section.settings['slogan-3-title'] }}"
              width="400"
              height="400"
              class="slogan-image"
            >
          {% endif %}

          <div class="slogan-content">
            {% if section.settings['slogan-3-title'] != '' %}
              <h3 class="slogan-title">{{ section.settings['slogan-3-title'] }}</h3>
            {% endif %}
            <div class="slogan-divider"></div>

            {% if section.settings['slogan-3-description'] != '' %}
              <p class="slogan-information">
                {{ section.settings['slogan-3-description'] }}
              </p>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Our Slogan",
  "settings": [
    {
      "type": "image_picker",
      "id": "slogan-1-image",
      "label": "Slogan 1 Image"
    },
    {
      "type": "text",
      "id": "slogan-1-title",
      "label": "Slogan 1 Title",
      "default": "Lorem Ipsum"
