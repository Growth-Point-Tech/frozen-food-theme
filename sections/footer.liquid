<div class="footer-wrapper" id="footer">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="footer-text-wrapper">
          {% if section.settings.title != '' %}
            <h4 class="footer-title-text">{{ section.settings.title }}</h4>
          {% endif %}
          {% if section.settings.tagline != '' %}
            <h5 class="footer-tag-line">{{ section.settings.tagline }}</h5>
          {% endif %}
          {% if section.settings.subtitle != '' %}
            <h6 class="footer-tag-line-description">
              {{ section.settings.subtitle }}
            </h6>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="newsletter-wrapper">
          <div class="newsletter-form-wrapper">
            <input type="email" class="contact-email" name="contact" placeholder="Your@example.com">
            <div class="btn btn-contained btn-green">
              {{ section.settings.btn_label }}
              <img
                src="{{ 'bell.png' | asset_url }}"
                class="subscribe-btn-icon"
                width="18"
                height="18"
                alt="right-arrow"
              >
            </div>
          </div>
          {% if section.settings.newletter_subtitle != '' %}
            <p class="newletter-helper-text">{{ section.settings.newletter_subtitle }}</p>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <div class="footer-link-wrapper">
          <div class="footer-social-media-wrapper">
            <div class="footer-logo-wrapper">
              <img
                src="{{ section.settings.footer_logo_image | image_url }}"
                width="200"
                height="146"
                alt="footer-logo"
              >
            </div>
            <div class="social-icons-wrapper">
              <a href="{{ section.settings.facebook_url }}" title="Facebook" target="_blank">
                <img
                  src="{{ 'facebook.svg' | asset_url }}"
                  alt="Facebook"
                  class="social-icon-img"
                  width="24"
                  height="24"
                >
              </a>

              <a href="{{ section.settings.instagram_url }}" title="Instagram" target="_blank">
                <img
                  src="{{ 'instagram.svg' | asset_url }}"
                  alt="Instagram"
                  class="social-icon-img"
                  width="24"
                  height="24"
                >
              </a>
              <a href="{{ section.settings.gmail_url }}" title="Gmail" target="_blank">
                <img
                  src="{{ 'email.png' | asset_url }}"
                  alt="Gmail"
                  class="social-icon-img"
                  width="24"
                  height="24"
                >
              </a>
            </div>
          </div>

          <div class="footer-navigation-content">
            {% for link in section.settings.footer_menu.links %}
              <div class="footer-navigation-link-wrapper">
                <div class="footer-title-wrapper">
                  <span>{{ link.title }}</span>

                  {% if link.links.size > 0 %}
                    <img
                      src="{{ 'right-arrow-white.png' | asset_url }}"
                      alt="Up arrow"
                      height="18"
                      width="18"
                      class="footer-link-icon"
                    >
                  {% endif %}
                </div>
                {% if link.links.size > 0 %}
                  <div class="footer-link-content">
                    {% for child_link in link.links %}
                      <div class="footer-link">
                        <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                      </div>
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <p class="footer-text">Sherpa Food © 2025</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "SHERPA FOOD"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tag Line",
      "default": "Frozen With Care"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "At Sherpa Food, we believe great meals start with great ingredients — handled with care, flash-frozen at peak freshness, and delivered straight to your table. Our process preserves taste, texture, and nutrition, so you enjoy real, honest food anytime."
    },
    {
      "type": "header",
      "content": "News Lettter Section"
    },
    {
      "type": "text",
      "id": "btn_label",
      "label": "Button Label",
      "default": "Subscribe",
      "placeholder": "Dont leave it blank"
    },
    {
      "type": "text",
      "id": "newletter_subtitle",
      "label": "Helper Text",
      "default": "At Sherpa food we value your privacy, you can always unsubscribe."
    },
    {
      "type": "header",
      "content": "Social Media Section"
    },
    {
      "type": "image_picker",
      "id": "footer_logo_image",
      "label": "Footer Logo"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "gmail_url",
      "label": "Gmail URL"
    },
    {
      "type": "header",
      "content": "Footer Menu"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer menu"
    }
  ]
}
{% endschema %}
